<Window x:Class="Gemino.GUI.Downloader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gemino.GUI"
        mc:Ignorable="d"
        Title="Загрузка обновлений" Height="207" Width="548" ResizeMode="NoResize" Icon="/Gemino;component/Resources/settings.png" WindowStartupLocation="CenterScreen" FontSize="14.667">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button x:Name="cancelButton" Content="Отмена" HorizontalAlignment="Right" Margin="0,0,20,0" Grid.Row="2" VerticalAlignment="Center" Width="100" Padding="5" IsCancel="True" Background="{x:Null}"/>
        <Label x:Name="label" Content="Загрузка обновлений..." HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center"/>
        <ProgressBar x:Name="downloadProgress" Margin="10,0" Grid.Row="1" VerticalAlignment="Center" Height="40"/>

    </Grid>
</Window>
